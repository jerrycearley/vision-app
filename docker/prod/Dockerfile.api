# syntax=docker/dockerfile:1
FROM node:20-alpine AS deps
WORKDIR /app

# Needed because repo postinstall uses bash
RUN apk add --no-cache bash

# Install deps at repo root so npm workspaces resolve @vision/*
COPY package.json package-lock.json turbo.json ./
# postinstall runs: bash scripts/fix-react.sh
COPY scripts ./scripts
COPY apps/api/package.json apps/api/package.json
COPY apps/web/package.json apps/web/package.json
COPY apps/mobile/package.json apps/mobile/package.json
COPY packages/shared/package.json packages/shared/package.json
COPY packages/contracts/package.json packages/contracts/package.json

RUN npm ci

FROM node:20-alpine AS build
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build only what API needs
RUN npx turbo run build --filter=@vision/api

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production

# Copy node_modules + built artifacts
# Note: npm workspaces create symlinks in node_modules pointing to workspace folders.
# We copy the workspace build outputs needed at runtime (packages/shared).
COPY --from=deps /app/node_modules ./node_modules
COPY --from=build /app/apps/api/dist ./apps/api/dist
COPY --from=build /app/apps/api/package.json ./apps/api/package.json
COPY --from=build /app/packages/shared/package.json ./packages/shared/package.json
COPY --from=build /app/packages/shared/dist ./packages/shared/dist

# Migrations live in dist/; run them at container start before server
COPY docker/prod/entrypoint-api.sh /entrypoint-api.sh
RUN chmod +x /entrypoint-api.sh

EXPOSE 4000
ENTRYPOINT ["/entrypoint-api.sh"]
